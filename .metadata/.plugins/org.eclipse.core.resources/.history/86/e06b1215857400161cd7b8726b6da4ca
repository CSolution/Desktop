			}

			con.close();

		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	public void SelectSearch(Grupo grupo){}
	public void Delete(Grupo grupo){}
	public void Update(Grupo grupo){}
}
